<?xml version="1.0" ?>
<launch>

    <!-- GENERAL ARGUMENTS-->
    <arg name="robot_name" default="panda"/>
    <arg name="tool_name" default="cameraD435"/>
    <arg name="simulation" default="true"/>
    <arg name="calibration" default="true"/>
    <arg name="safety_distance" default="0.03"/>
    <arg name="method" default="none"/>

    <!-- ROBOT SETUP -->
	<include file="$(find robot_arm_tools)/launch/Setup_$(arg robot_name).launch">
		<arg name="tool_name" value="$(arg tool_name)"/>
		<arg name="simulation" value="$(arg simulation)"/>
        <arg name="calibration" value="$(arg calibration)"/>
		<arg name="safety_distance" value="$(arg safety_distance)"/>
	</include>

    <!-- TOOL SETUP -->
    <group if="$(eval arg('tool_name') == 'cameraD435' or arg('tool_name') == 'cameraD405')">       
        <!-- Depth image based methods -->
        <include file="$(find robot_arm_3d_scan)/launch/Setup_realsense_DI.launch" if="$(eval arg('method') == 'rtabmap')" pass_all_args="true"/>

        <!-- Point clouds based methods -->
        <include file="$(find robot_arm_3d_scan)/launch/Setup_realsense_PC.launch" if="$(eval arg('method') == 'none' or arg('method') == 'icp')"  pass_all_args="true"/>
    </group>
    
    <!-- MATCHING METHOD SETUP -->
    <include file="$(find robot_arm_3d_scan)/launch/$(arg method).launch"/>

    <!-- MAIN NODE -->       
    <param name="measurementServerStorageFolder" value="$(find robot_arm_3d_scan)/config/scans/SphericScan_$(arg method)_$(arg calibration)/"/>
    <param name="measurementServerDisplay" value="false"/>

    <rosparam command="load" file="$(find robot_arm_3d_scan)/config/AcquisitionParameters.yaml"/>
    <node pkg="robot_arm_3d_scan" type="robot_arm_3d_scan_scan_node" name="robot_arm_3d_scan_scan_node" output="screen"/>

    <!-- RVIZ -->	
    <!--<param name="environmentFileName" value="$(find robot_arm_3d_scan)/config/environments/OptiTrack_panda.yaml" if="$(eval arg('robot_name') == 'panda')"/>
    <param name="environmentFileName" value="$(find robot_arm_3d_scan)/config/environments/OptiTrack_ur.yaml" if="$(eval 'ur' in arg('robot_name'))"/>-->
    <node pkg="robot_arm_tools" type="robot_arm_tools_environment_node" name="robot_arm_tools_environment_node" output="screen">
        <param name="environmentFileName" value="$(find robot_arm_acoustic)/config/environments/AnechoicRoom.yaml"/>
    </node>
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find robot_arm_3d_scan)/config/3DScanSetup.rviz"/> 

</launch>
